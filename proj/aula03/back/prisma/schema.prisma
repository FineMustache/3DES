// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setor {
  id       Int       @id @default(autoincrement())
  nome     String
  comissao Float
  produtos  Produto[]
  funcionarios Funcionario[]
}

model Produto {
  id       Int   @id @default(autoincrement())
  nome     String
  valor    Float
  id_setor Int
  setor    Setor @relation(fields: [id_setor], references: [id])
  detalhe Detalhe[]
}

model Funcionario {
  id Int @id @default(autoincrement())
  nome String
  salario Float
  id_setor Int
  setor Setor @relation(fields: [id_setor], references: [id])
  vendas Vendas[]
}

model Vendas {
  id Int @id @default(autoincrement())
  data DateTime @default(now())
  id_funcionario Int
  funcionario Funcionario @relation(fields: [id_funcionario], references: [id])
  detalhe Detalhe[]
}

model Detalhe {
  id Int @id @default(autoincrement())
  id_produto Int
  id_venda Int
  quantidade Int
  produto Produto @relation(fields: [id_produto], references: [id])
  venda Vendas @relation(fields: [id_venda], references: [id])
}